{% extends "layouts/default.twig" %}

{% set title = 'Making a Request' %}
{% set page_title = ' - ' ~ title %}

{% block container %}
<section>
	<div class="flex flex-col screen-desktop:flex-row flex-wrap">
		<div class="mt-4 layout--content">
			<div class="screen-desktop:pr-4 screen-desktop:pr-6">
				{% if title %}<h1 class="mt-0 p-0">{{ title }}</h1>{% endif %}
				<div class="o-content">
					{% markdown '../content/making-a-request-1.md' %}{% endmarkdown %}
				</div>
			</div>
		</div>
	</div>

	<div class="relative overflow-x-auto scrolling-touch">
		<div id="household-table" class="table"></div>
		<div data-js="jsonToTable" data-js-json-to-table-json="#household-json" data-js-json-to-table-table="#household-table" class="code-block hidden" aria-hidden="true">
			<pre id="household-json">{% filter escape %}{% include '../js/modules/household-composition-household.json' %}{% endfilter %}</pre>
		</div>
	</div>

	<div class="relative overflow-x-auto scrolling-touch">
		<div class="table">
			{% markdown '../content/household-composition-person-table.md' %}{% endmarkdown %}
		</div>
	</div>

	<div class="flex flex-col screen-desktop:flex-row flex-wrap pb-4">
		<div class="mt-4 layout--content">
			<div class="screen-desktop:pr-4 screen-desktop:pr-6">
				<div class="o-content">
					{% markdown '../content/making-a-request-2.md' %}{% endmarkdown %}
				</div>
			</div>
		</div>
	</div>
</section>
{% endblock %}

